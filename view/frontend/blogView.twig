{% extends 'frontend/template.twig' %}
{% block title %}
    Blog
{% endblock %}

{% block content %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('../../public/images/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Léo Moille</h1>
                        <span class="subheading">Le Blog</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <h2 class="text-center">Toutes les publications</h2>
                </div>
            </div>
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="input-group mb-3">
                        <select class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <option value="">Toutes les publications</option>
                            <option value="php">PHP</option>
                            <option value="wordpress">WordPress</option>
                            <option value="javascript">JavaScript</option>
                        </select>
                        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Trier</button>
                    </div>
                </div>
            </div>
            <div class="row gx-4 gx-lg-5 justify-content-center">

                {% for article in articles %}
                    <div class="post-preview"><a href="?action=post&id={{ article.id }}">
                            <h2 class="post-title">{{ article.title }}</h2>
                            <h3 class="post-subtitle">{{ article.pre_content }}</h3>
                        </a>
                        <div class="post-meta">
                            Publié par <a href="#">{{ article.author }}</a> le {{ article.publication_date }}
                            {% if article.modification_date %}
                                <div>
                                    <span class="small">
                                        Dernière modification le {{ article.modification_date }}
                                    </span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
